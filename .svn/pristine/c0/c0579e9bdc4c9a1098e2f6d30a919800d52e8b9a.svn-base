<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>NG2.3自助终端</display-name>
  
  <!-- spring的配置文件，不可加任何注释，否则weblogic启动不成功 -->
  <context-param>
  	<param-name>contextConfigLocation</param-name>
  	<param-value>
  		/WEB-INF/spring/applicationContext-datasource.xml,
  		/WEB-INF/spring/applicationContext-busiAcceptTime.xml,
  		/WEB-INF/spring/applicationContext-base.xml,
  		/WEB-INF/spring/applicationContext-resData.xml,
  		/WEB-INF/spring/applicationContext-login.xml,
  		/WEB-INF/spring/applicationContext-media.xml,
  		/WEB-INF/spring/applicationContext-feeservice.xml,
  		/WEB-INF/spring/applicationContext-terminalInfo.xml,
  		/WEB-INF/spring/applicationContext-serviceInfo.xml,
  		/WEB-INF/spring/applicationContext-baseService.xml,
  		/WEB-INF/spring/applicationContext-reception.xml,
  		/WEB-INF/spring/applicationContext-managerOperation.xml,
  		/WEB-INF/spring/applicationContext-privilege.xml,
  		/WEB-INF/spring/applicationContext-charge.xml,
  		/WEB-INF/spring/applicationContext-quickpublish.xml,
  		/WEB-INF/spring/customize/nx/applicationContext-*-nx.xml
  	</param-value>
  </context-param>
  
  <!-- spring监听器 -->
  <listener>
  	 <listener-class>com.gmcc.boss.selfsvc.listener.ShContextLoaderListener</listener-class>
  </listener>
  
  <!-- spring内置中文过滤器 -->
  <filter>
	<filter-name>encodingFilter</filter-name>
	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
	<init-param>
		<param-name>encoding</param-name>
		<param-value>GBK</param-value>
	</init-param>
  </filter>
  <filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- 认证过滤器 -->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.gmcc.boss.selfsvc.filter.AuthorityFilterNX</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthFilter</filter-name>
  	<url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>AuthFilter</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  
  <!-- struts2配置 -->
  <filter>
  	<filter-name>struts2</filter-name>
  	<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>struts2</filter-name>
  	<url-pattern>*.action</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>struts2</filter-name>
  	<url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <!-- 定时刷新内存 -->
  <servlet>
	<servlet-name>InitSvr</servlet-name>
	<servlet-class>com.gmcc.boss.selfsvc.cache.InitSvr</servlet-class>
	<load-on-startup>10</load-on-startup>
  </servlet>
  <servlet-mapping>
	<servlet-name>InitSvr</servlet-name>
	<url-pattern>/refreshCache</url-pattern>
  </servlet-mapping>
  <!-- add begin g00140516 2012/10/08 R003C12L09n01 OR_NX_201208_991 -->
  <servlet>
	<servlet-name>InitSvrNX</servlet-name>
	<servlet-class>com.customize.nx.selfsvc.cache.InitSvrNX</servlet-class>
	<load-on-startup>11</load-on-startup>
  </servlet>
  <servlet-mapping>
	<servlet-name>InitSvrNX</servlet-name>
	<url-pattern>/refreshCacheNX</url-pattern>
  </servlet-mapping>
  <!-- add end g00140516 2012/10/08 R003C12L09n01 OR_NX_201208_991 -->
  
  <!-- 欢迎页面 -->
  <welcome-file-list>
    <welcome-file>initip.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 自定义标检 -->
  <jsp-config>
	<taglib>
	  <taglib-uri>/WEB-INF/cdrlist-paginator.tld</taglib-uri>
	  <taglib-location>/WEB-INF/cdrlist-paginator.tld</taglib-location>
	</taglib>
	<taglib>
	  <taglib-uri>/WEB-INF/commonpage.tld</taglib-uri>
	  <taglib-location>/WEB-INF/commonpage.tld</taglib-location>
	</taglib>
	<taglib>
	  <taglib-uri>/WEB-INF/paginator.tld</taglib-uri>
	  <taglib-location>/WEB-INF/paginator.tld</taglib-location>
	</taglib>
  </jsp-config>
</web-app>
